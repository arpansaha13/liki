{
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
    ],
    "lib": [
      "esnext",
      "dom",
    ],
    "paths": {
      "~/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    "src"
  ],
  "exclude": []
}